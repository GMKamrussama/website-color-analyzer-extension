{
  "manifest_version": 3,
  "name": "Color Assistant",
  "version": "1.0",
  "description": "Extract website colors instantly",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Color Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.svg"
  }
}